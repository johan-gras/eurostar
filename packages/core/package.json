{
  "name": "@eurostar/core",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./result": {
      "import": "./dist/result.js",
      "types": "./dist/result.d.ts"
    },
    "./db": {
      "import": "./dist/db/index.js",
      "types": "./dist/db/index.d.ts"
    },
    "./db/schema": {
      "import": "./dist/db/schema.js",
      "types": "./dist/db/schema.d.ts"
    },
    "./gtfs": {
      "import": "./dist/gtfs/index.js",
      "types": "./dist/gtfs/index.d.ts"
    },
    "./queue": {
      "import": "./dist/queue/index.js",
      "types": "./dist/queue/index.d.ts"
    },
    "./auth": {
      "import": "./dist/auth/index.js",
      "types": "./dist/auth/index.d.ts"
    },
    "./preferences": {
      "import": "./dist/preferences/index.js",
      "types": "./dist/preferences/index.d.ts"
    },
    "./email": {
      "import": "./dist/email/index.js",
      "types": "./dist/email/index.d.ts"
    },
    "./config": {
      "import": "./dist/config/env.js",
      "types": "./dist/config/env.d.ts"
    },
    "./logging": {
      "import": "./dist/logging/index.js",
      "types": "./dist/logging/index.d.ts"
    },
    "./monitoring": {
      "import": "./dist/monitoring/index.js",
      "types": "./dist/monitoring/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:prod": "tsx src/db/migrate.ts --verbose",
    "db:seed": "tsx src/db/seed.ts --verbose --clean",
    "db:studio": "drizzle-kit studio",
    "worker": "tsx src/worker.ts"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bullmq": "^5.66.4",
    "drizzle-orm": "^0.38.0",
    "gtfs-realtime-bindings": "^1.1.1",
    "ioredis": "^5.9.0",
    "jsonwebtoken": "^9.0.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.5",
    "resend": "^6.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "drizzle-kit": "^0.30.0",
    "fastify": "^5.6.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.0"
  }
}
